{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "./dist",
		"skipLibCheck": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"include": ["src/**/*"]
}
